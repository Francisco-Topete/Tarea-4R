@model T04R.Models.Empleado
@{
    ViewBag.Title = "Detalles";
}

<br />
<br />
<br />
<br />
<br />
<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2><b>Empleados</b></h2>
                    </div>
                </div>
            </div>
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Fecha de nacimiento</th>
                        <th>Tipo</th>
                        <th>Departamento</th>
                        <th>Nomina</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.FechaDeNacimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Tipo.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Departamento.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Nomina.Sueldo)
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>


